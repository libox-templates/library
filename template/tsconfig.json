{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "noEmit": true,
    "lib": ["dom"],
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  }
}
